                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Division" Content="/" HorizontalAlignment="Left" Margin="258,290,0,0" VerticalAlignment="Top" Width="46" Height="31" OpacityMask="Red" Click="Button_Division_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Factorial" Content="x!" HorizontalAlignment="Left" Margin="44,142,0,0" VerticalAlignment="Top" Width="46" Height="31" OpacityMask="Red" Click="Button_Factorial_Click" d:LayoutOverrides="VerticalAlignment">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Root" Content="Sqrt(x)" HorizontalAlignment="Left" Margin="117,142,0,0" VerticalAlignment="Top" Width="46" Height="31" OpacityMask="Red" Click="Button_Root_Click" d:LayoutOverrides="VerticalAlignment">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Clear" Content="Ce" HorizontalAlignment="Left" Margin="190,142,0,0" VerticalAlignment="Top" Width="46" Height="31" OpacityMask="Red" Click="Button_Clear_Click" d:LayoutOverrides="VerticalAlignment">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Equally" Content="=" HorizontalAlignment="Left" Margin="258,338,0,0" VerticalAlignment="Top" Width="46" Height="31" OpacityMask="Red" Click="Button_Equally_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="35,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBl" HorizontalAlignment="Left" Height="19" Margin="36,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Opacity="0.85"/>
        <Menu x:Name="menu" Height="22" Margin="0,1,1,0" VerticalAlignment="Top" RenderTransformOrigin="0.48,0.44">

            <MenuItem Header="_История" Click="MenuItem_Click">
            </MenuItem>
        </Menu>

    </Grid>
</Window>
