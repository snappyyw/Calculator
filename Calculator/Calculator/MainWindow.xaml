                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Plus" Content="+" HorizontalAlignment="Left" Margin="258,143,0,0" VerticalAlignment="Top" Width="46" Height="31" OpacityMask="Red" Click="Button_Plus_Click" d:LayoutOverrides="VerticalAlignment">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Minus" Content="-" HorizontalAlignment="Left" Margin="259,0,0,171" Width="46" OpacityMask="Red" Click="Button_Minus_Click" Height="30" VerticalAlignment="Bottom">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Increase" Content="*" HorizontalAlignment="Left" Margin="258,242,0,0" VerticalAlignment="Top" Width="46" Height="31" OpacityMask="Red" Click="Button_Increase_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
