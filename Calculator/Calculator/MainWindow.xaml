                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Button_Point" Content="," HorizontalAlignment="Left" Margin="45,338,0,0" VerticalAlignment="Top" Width="46" Height="31" OpacityMask="Red" Click="Button_Point_Click">
